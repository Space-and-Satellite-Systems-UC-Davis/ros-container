{
  "name": "ROS 2 ${templateOption:rosDistro}",
  "image": "ghcr.io/space-and-satellite-systems-uc-davis/ros-container:${templateOption:rosDistro}",
  "remoteEnv": {
    "ROS_DISTRO": "${templateOption:rosDistro}",
    "DISPLAY": ":1"
  },
  "forwardPorts": [5901],
  "portsAttributes": {
    "5901": {
      "label": "VNC",
      "onAutoForward": "notify"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "postStartCommand": "if command -v start-vnc.sh &> /dev/null; then start-vnc.sh; fi"
}
